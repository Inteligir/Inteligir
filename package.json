{
  "name": "Inteligir",
  "description": "Inteligir is a platform to build interactive stories and lessons through scrollytelling",
  "author": "Kaiyu Hsu <im.kaiyu@gmail.com> (http://github.com/tehkaiyu)",
  "license": "MIT",
  "version": "0.0.0",
  "main": "server/index.js",
  "engines": {
    "node": "8.11.1",
    "npm": "5.6.0"
  },
  "scripts": {
    "analyze": "source-map-explorer client/build/static/js/main.*",
    "start": "node server/index.js",
    "server": "nodemon -r dotenv/config server/index.js --ignore tests",
    "client": "npm run start --prefix client",
    "deploy": "node -r dotenv/config tools/deploy",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "setup": "npm install && npm install --prefix client && npm run decrypt-env",
    "encrypt-env": "openssl aes-256-cbc -a -salt -in .env -pass file:encrypted/.inteligir_dev.key -out encrypted/env.enc",
    "decrypt-env": "openssl aes-256-cbc -d -a -salt -in encrypted/env.enc -pass file:encrypted/.inteligir_dev.key -out .env",
    "heroku-postbuild": "npm run build",
    "precommit": "pretty-quick --staged",
    "test": "jest"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./tests/setup.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Inteligir/Inteligir"
  },
  "_moduleDirectories": [
    "server"
  ],
  "dependencies": {
    "aws-sdk": "2.287.0",
    "body-parser": "1.18.3",
    "boom": "7.2.0",
    "concurrently": "3.6.0",
    "cookie-session": "2.0.0-beta.3",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "express-async-errors": "3.0.0",
    "helmet": "^3.13.0",
    "jest": "23.4.1",
    "migrate-mongoose": "3.2.2",
    "mime-types": "^2.1.19",
    "module-alias": "^2.1.0",
    "mongoose": "5.2.7",
    "nodemon": "1.18.3",
    "passport": "0.4.0",
    "passport-google-oauth20": "1.0.0",
    "path-parser": "4.2.0",
    "puppeteer": "1.6.2",
    "redis": "2.8.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.6",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.10.0",
    "husky": "0.14.3",
    "inquirer": "6.1.0",
    "prettier": "1.14.0",
    "pretty-quick": "1.6.0",
    "source-map-explorer": "1.6.0"
  }
}
