enum Permission {
  ADMIN
  USER
}

type User {
  id: ID! @id
  username: String!
  password: String!
  email: String @unique
  resetToken: String
  resetTokenExpiry: Float
  lists: [List!]!
  permissions: [Permission] @scalarList(strategy: RELATION)
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type List {
  id: ID! @id
  published: Boolean! @default(value: true)
  title: String!
  description: String!
  author: User!
  emoji: String
  imageUrl: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type ListItem {
  id: ID! @unique
  link: String!
  addedBy: User!
  list: List!
}
