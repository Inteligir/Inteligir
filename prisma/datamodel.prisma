enum Permission {
  ADMIN
  USER
}

type User {
  id: ID! @id
  username: String!
  password: String!
  email: String @unique
  avatar: String
  resetToken: String
  resetTokenExpiry: Float
  enrolledCourses: [EnrolledCourse]
  permissions: [Permission] @scalarList(strategy: RELATION)
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Course {
  id: ID! @id
  published: Boolean! @default(value: true)
  title: String!
  description: String!
  author: User!
  emoji: String
  thumbnail: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type EnrolledCourse {
  id: ID! @id
  course: Course!
  enrollee: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum LessonType {
  LINK
  VIDEO
  POST
}

type Lesson {
  id: ID! @id
  title: String!
  link: String
  content: String
  author: User!
  course: Course!
  type: [LessonType] @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type CompletedLesson {
  id: ID! @id
  completedBy: User!
  lesson: Lesson!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
