enum Permission {
  ADMIN
  USER
}

enum ListItemType {
  LINK
  VIDEO
  POST
}

type User {
  id: ID! @id
  username: String!
  password: String!
  email: String @unique
  avatar: String
  resetToken: String
  resetTokenExpiry: Float
  lists: [List!]!
  permissions: [Permission] @scalarList(strategy: RELATION)
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type List {
  id: ID! @id
  published: Boolean! @default(value: true)
  title: String!
  description: String!
  author: User!
  emoji: String
  thumbnail: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type ListItem {
  id: ID! @unique
  content: String!
  addedBy: User!
  list: List!
  type: [ListItemType] @scalarList(strategy: RELATION)
}
