{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/*"],
      "@client/*": ["client/*"],
      "@utils/*": ["client/utils/*"],
      "@features/*": ["client/features/*"],
      "@components": ["client/components/index"]
    },
    "typeRoots": ["node_modules/@types", "client/__generated__/types"],
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", ".next", "next.config.js"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
